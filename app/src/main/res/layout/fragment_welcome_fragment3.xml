<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@mipmap/classes"
    tools:context="com.example.user.oicsch.WelcomeScreen.WelcomeFragment3">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Classes Schedule"
        android:textColor="#ffffff"
        android:textSize="23sp"
        android:textStyle="bold"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="86dp"
        android:layout_marginStart="86dp"
        android:layout_marginBottom="159dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Get updated classes schedule for all faculty and every semisters"
        android:textColor="#ffffff"
        android:textSize="18sp"
        android:layout_marginTop="47dp"
        android:textAlignment="center"
        android:layout_marginRight="5dp"
        android:layout_alignTop="@+id/name"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/textView2" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/textView2">

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:spinnerMode="dropdown"
            android:id="@+id/welcomespinner"
            android:layout_marginLeft="19dp"
            android:layout_marginStart="19dp"
            style="@style/Base.Theme.AppCompat.Light"
            android:popupBackground="#e8e8e8"
            />

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="38dp"
            android:layout_marginStart="38dp"
            android:id="@+id/spinner"
            android:popupBackground="#e8e8e8"
            />

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14dp"
            android:layout_marginStart="14dp"
            android:popupBackground="#e8e8e8"
            android:id="@+id/spinner2" />
    </LinearLayout>

</RelativeLayout>
